<%= form_for(@issue, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @issue.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h4>

      <ul>
      <% @issue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :subject, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :subject, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :text, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :text, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :repository_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :repository_id, Repository.pluck(:name, :id), {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
