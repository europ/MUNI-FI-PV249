<p id="notice"><%= notice %></p>

<h1>Repositories</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>User ID</th>
        <th>User Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @repositories.each do |repository| %>
        <tr>
          <td><%= repository.id %></td>
          <td><%= repository.name %></td>
          <td><%= link_to "#{repository.user.id}", user_path(repository.user_id) %></td>
          <td><%= link_to "#{repository.user.name}", user_path(repository.user_id) %></td>
          <td><%= link_to 'Show', repository %></td>
          <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
          <td><%= link_to 'Destroy', repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Repository', new_repository_path %>
