<div class="page-header">
  <%= link_to repositories_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_repository_path(@repository), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show repository</h1>
</div>

<dl class="dl-horizontal">

  <dt>ID:</dt>
  <dd><%= @repository.id %></dd>

  <dt>Name:</dt>
  <dd><%= @repository.name %></dd>

  <dt>User ID:</dt>
  <dd><%= link_to "#{@repository.user_id}", user_path(@repository.user_id) %></dd>

  <dt>User Name:</dt>
  <dd><%= link_to "#{@repository.user.name}", user_path(@repository.user_id) %></dd>
</dl>
